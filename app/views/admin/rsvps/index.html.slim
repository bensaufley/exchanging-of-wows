.row
  .column
    h1 rsvps

    table
      thead
        tr
          th
          th Name
          th Notes
          th

      tbody
        - @rsvps.each do |rsvp|
          tr
            td.text-center == rsvp.attending? ? 'Attending' : '&times;'
            td
              - rsvp.names.each do |name|
                = name
                br
              '
              small = link_to rsvp.ip, 'https://db-ip.com/' + rsvp.ip, target: :_blank
            td = rsvp.notes
            td.text-right
              = link_to '📝', edit_rsvp_path(rsvp)
              '
              = link_to '🗑', rsvp, data: { confirm: 'Are you sure?' }, method: :delete
        tr
          td.text-center = @rsvp_count
          td
          td
          td
